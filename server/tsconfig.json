{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2015",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturn": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "outDir": "dist"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
